<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_sw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_sw"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/element_margin_10"
                android:scaleType="centerInside"
                android:src="@drawable/mima" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/element_margin_10"
                android:layout_toRightOf="@id/iv_sw"
                android:gravity="center"
                android:text="切换滑动模式"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14_sp" />

            <TextView
                android:id="@+id/tv_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/element_margin_10"
                android:drawablePadding="@dimen/element_margin_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="70dp"
                android:drawableRight="@drawable/jinru"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14_sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_margin_1"
            android:background="@color/gray_line" />

    </LinearLayout>
</ScrollView>