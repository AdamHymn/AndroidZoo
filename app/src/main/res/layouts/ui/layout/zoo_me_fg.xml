<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_margin_0.5"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivname"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/element_margin_10"
                android:scaleType="centerInside"
                android:src="@drawable/name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/element_margin_10"
                android:layout_toRightOf="@id/ivname"
                android:gravity="center"
                android:text="姓名"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14_sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/element_margin_10"
                android:drawablePadding="@dimen/element_margin_5"
                android:drawableRight="@drawable/jinru"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14_sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_margin_0.5"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/element_margin_10"
                android:scaleType="centerInside"
                android:src="@drawable/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/element_margin_10"
                android:layout_toRightOf="@id/iv_phone"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14_sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/element_margin_10"
                android:drawablePadding="@dimen/element_margin_5"
                android:drawableRight="@drawable/jinru"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14_sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_margin_0.5"
            android:background="@color/gray_line" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_margin_0.5"
            android:layout_marginTop="@dimen/element_margin_10"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_50"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/element_margin_10"
                android:scaleType="centerInside"
                android:src="@drawable/zhanghao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/element_margin_10"
                android:layout_toRightOf="@id/iv_logout"
                android:gravity="center"
                android:text="退出账号"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14_sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_margin_0.5"
            android:background="@color/gray_line" />

    </LinearLayout>
</ScrollView>