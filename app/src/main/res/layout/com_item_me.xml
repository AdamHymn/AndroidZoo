<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_input_50">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/element_margin_10"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/element_margin_10"
            android:layout_toRightOf="@id/iv1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14_sp" />

        <TextView
            android:id="@+id/tv_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/element_margin_10"
            android:drawablePadding="@dimen/element_margin_5"
            android:drawableRight="@drawable/arrow_right_gray"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14_sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_margin_1"
        android:background="@color/text_gray" />
</LinearLayout>